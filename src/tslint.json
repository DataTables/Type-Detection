{
    "extends": [
        "tslint:latest",
        "tslint-eslint-rules"
    ],
    "rules": {
        "prefer-const": false,
        "semicolon": true,
        "class-name": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": false,
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "indent": [
            true,
            "tabs",
            4
        ],
        "ordered-imports": true,
        "newline-per-chained-call": [
            2
        ],
        "arrow-parens": false,
        "brace-style": [
            true,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "eofline": true,
        "space-in-parens": [
            "error",
            "always"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "only-arrow-functions": false,
        "no-empty-interface": false,
        "no-implicit-dependencies": false,
        "no-submodule-imports": false,
        "no-namespace": false,
        "no-unused-variable": true,
        "forin": false
    }
}